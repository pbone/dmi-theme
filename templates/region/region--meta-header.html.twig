{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region div.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
 * @see template_preprocess_region()
 */
#}
{%
set classes = [
'm-header',
'sticky'
]
%}

{% if content %}
  <header{{ attributes.addClass(classes).setAttribute('data-sticky', '').setAttribute('data-sticky-on', 'small').setAttribute('data-margin-top', '0').setAttribute('role', 'banner') }}>
    <div class="m-header-inner"> {{ content }} </div>
  </header>
{% endif %}