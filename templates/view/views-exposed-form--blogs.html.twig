{#
/**
 * @file
 * Theme override of a views exposed form.
 *
 * Available variables:
 * - form: A render element representing the form.
 *
 * @see template_preprocess_views_exposed_form()
 */
#}
{% if q is not empty %}
    {#
      This ensures that, if clean URLs are off, the 'q' is added first,
      as a hidden form element, so that it shows up first in the POST URL.
    #}
    {{ q }}
{% endif %}

<div class="industry-color"></div>
<div class="l-filter-main row is-hidden align-center">
    <div class="columns small-12 large-10">

          {{ form.actions }}
    <div class="m-filter-group">



        {% if form.field_industry %}
            <div class="m-filter-group-label">{{ 'Industry'|trans }}</div>
          <div class="m-filter">

              {{ form.field_industry }}

            <div class="m-filter-select">
              <a class="m-filter-button"><span><svg class="i-arrow-down" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 15 7"><path fill="none" stroke="#007ac9" d="M5.5 0.5L0.5 0.5 7.5 6.5 14.5 0.5 9.5 0.5" stroke-linecap="round" stroke-linejoin="round"/></svg></span></a>
              <ul class="m-filter-select-list custom-select-options is-collapsed"></ul>
            </div>
          </div>
        {% endif %}
        {% if form.field_blog_author %}
            <div class="m-filter-group-label">{{ 'Author'|trans }}</div>
            <div class="m-filter show-filter-author">

                {{ form.field_blog_author }}

                <div class="m-filter-select">
                    <a class="m-filter-button"><span><svg class="i-arrow-down" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 15 7"><path fill="none" stroke="#007ac9" d="M5.5 0.5L0.5 0.5 7.5 6.5 14.5 0.5 9.5 0.5" stroke-linecap="round" stroke-linejoin="round"/></svg></span></a>
                    <ul class="m-filter-select-list custom-select-options is-collapsed"></ul>
                </div>
            </div>
        {% endif %}
        {% if form.field_topic_target_id %}
            <div class="m-filter-group-label">{{ 'Topic'|trans }}</div>
            <div class="m-filter show-filter-author">

                {{ form.field_topic_target_id }}

                <div class="m-filter-select">
                    <a class="m-filter-button"><span><svg class="i-arrow-down" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 15 7"><path fill="none" stroke="#007ac9" d="M5.5 0.5L0.5 0.5 7.5 6.5 14.5 0.5 9.5 0.5" stroke-linecap="round" stroke-linejoin="round"/></svg></span></a>
                    <ul class="m-filter-select-list custom-select-options is-collapsed"></ul>
                </div>
            </div>
        {% endif %}
        {% if form.field_tax_function_target_id %}
            <div class="m-filter-group-label">{{ 'Function'|trans }}</div>
            <div class="m-filter show-filter-author">

                {{ form.field_tax_function_target_id }}

                <div class="m-filter-select">
                    <a class="m-filter-button"><span><svg class="i-arrow-down" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 15 7"><path fill="none" stroke="#007ac9" d="M5.5 0.5L0.5 0.5 7.5 6.5 14.5 0.5 9.5 0.5" stroke-linecap="round" stroke-linejoin="round"/></svg></span></a>
                    <ul class="m-filter-select-list custom-select-options is-collapsed"></ul>
                </div>
            </div>
        {% endif %}






    </div>

      {{ form|without('search_api_fulltext', 'field_industry', 'field_business', 'field_use_case',
          'field_tax_function', 'actions', 'field_blog_author', 'field_topic_target_id', 'field_tax_function_target_id') }}

  </div>
</div>
