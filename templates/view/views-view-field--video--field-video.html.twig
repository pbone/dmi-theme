<script type="text/javascript">
    if (window.video_embed == undefined) {
        window.video_embed = {
            videos: []
        };
    }
</script>

<a href="javascript:void(0)" data-open="video-{{ videoId }}" data-video="{{ videoId }}" class="open-video-modal">
    <span>{{ get_svg('i-play') }}</span>
    {{ videoThumb }}
</a>

<div id="video-{{ videoId }}" class="reveal video-modal" data-reveal aria-labelledby="videoModal" aria-hidden="true" role="dialog">

    <div class="responsive-embed widescreen">
        {{ videoIframe }}
    </div>

    <div class="m-close">
        <a href="javascript:void(0);" data-video="{{ videoId }}" class="close-reveal-modal close-video-modal" data-close aria-label="Close">
            <span>{{ get_svg('i-close') }}</span> Close
        </a>
    </div>

    <script type="text/javascript">
        window.video_embed.videos[{{ videoId }}] = {};
    </script>
</div>